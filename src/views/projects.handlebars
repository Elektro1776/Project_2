<!-- Accordion structure -->


  <div class= "row">
    <div class= "col-sm-12 col-md-6 col-lg-6">
      {{#each projects}}
  <div class="panel-group">
    <div class="panel panel-default">
      <button id='{{id}}' class="projectButton glyphicon glyphicon-fullscreen btn btn-success" aria-hidden="true"></button>
      <div class="panel-heading" data-toggle="collapse"  href="#collapse{{id}}">
        <h4 class="panel-title">
          <div data-toggle="collapse"  href="#collapse{{id}}">{{name}}</div>
        </h4>
      </div>
      <div id="collapse{{id}}" class="panel-collapse collapse">
        <br>
        <p>Description: {{ description }} </p>
        <p> Issues: {{ issues }}</p>
        <p> {{ body }} </p>
        <p> {{ assignees }} </p>
        <p>Owner: {{ owner.login }}</p>
        <form class="projectInfo">
          <input type='' class='form-control input-lg' placeholder='Add Collaborator' >
          <button type='submit' class='btn btn-lg btn-default '>Add Collaborator</button>

        </form>
        <form class="projectInfo">
          <input type='' class='form-control input-lg' placeholder='Add Collaborator' >
          <button type='submit' class='btn btn-lg btn-default '>Create PR</button>

        </form>
        <form class="projectInfo">
          <input type='' class='form-control input-lg' placeholder='Add Collaborator' >
          <button type='submit' class='btn btn-lg btn-default '>Create Issue</button>

        </form>
        <form class="projectInfo">
          <input type='' class='form-control input-lg' placeholder='Add Collaborator' >
          <button type='submit' class='btn btn-lg btn-default '>Assign Issues</button>

        </form>

        <button type="button" class="btn btn-success popStyle" data-toggle="popover" data-content="jazz">Add collaborator</button>
        <div id="popover" class="hide">
          <form>
            <input></input>
            <button type="submitCollab" class="btn btn-info">Submit</button>
          </form>
        </div>

      </div>
    </div>
  </div>
  {{/each}}
</div>
</div





<!-- Modal structure -->

<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="projectLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">Add a new project!</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form>
          <div class="form-group">
            <label for="githubDropDown">Your projects from Github</label>
            <select class="form-control" id="githubDropDown">
              {{#each projects}}
              <option>{{name}}</option>
              {{/each}}
            </select>
            <small for= "githubDropDown"> Dynamically add a current project from Github!</small>
          </div>

          <div class="form-group">
            <label for="projectName">Project Name</label>
            <input type="email" class="form-control" id="projectName" aria-describedby="projectHelp" placeholder="Enter Project Name">
          </div>
          <!-- <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
          </div> -->

          <div class="form-group">
            <label for="projectDescription">Description</label>
            <textarea class="form-control" id="projectDescription" rows="3"></textarea>
          </div>

        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
