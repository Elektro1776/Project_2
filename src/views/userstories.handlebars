<!-- Matrix  Structure -->

<style>
  .hold {
    background: rgba(180, 180, 180, 0.8);
    height: 140px;
    border: 2px black solid;
  }

  .top {
    line-height: 60px;
    margin-top: 40px;
    background: rgba(180, 180, 180, 0.8);
    height: 60px;
    border: 2px black solid;
  }

  .vertical-text {
    transform: rotate(-90deg);

    margin-top: 100%;
  }
</style>

<div class="row text-center">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-4 top">high importance</div>
    <div class="col-xs-4 top">low importance</div>
  </div>
  <div class="row">
    <div class="col-xs-1 col-xs-offset-1 hold">
      <p class="vertical-text">high value</p>
    </div>
    <div class="text-center">
      <div class="col-xs-4 hold ">Do</div>
      <div class="col-xs-4 hold">Decide</div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-1 col-xs-offset-1 hold">
      <p class="vertical-text">low value</p>
    </div>
    <div class="text-center">
      <div class="col-xs-4 hold">Delegate</div>
      <div class="col-xs-4 hold">Delete</div>
    </div>
  </div>
</div>


<!-- Modal structure -->

<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="userLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="userStoryModal">Create a new user story!</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form>
          <div class="form-group">
            <label for="projectName">User Story</label>
            <input type="text" class="form-control" id="userStory" aria-describedby="userHelp" placeholder="Enter User Story Name">
          </div>
          <!-- <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
          </div> -->

          <div class="form-group">
            <label for="projectDescription">Description</label>
            <textarea class="form-control" id="projectDescription" rows="3"></textarea>
          </div>

          <div class="form-group">
            <label for="githubDropDown">Rank your User Story:</label>
            <select class="form-control" id="githubDropDown">
              <option value="4">High Importance / High Value</option>
              <option value="3">Low Importance / High Value</option>
              <option value="2">High Importance / Low Value</option>
              <option value="1">Low Importance / Low Value</option>
            </select>
            <small for="githubDropDown"> This will help to place your user story on the priority matrix!</small>
          </div>

        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="userStorySubmit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
<script src="/assets/javascript/newUserStory.js"></script>